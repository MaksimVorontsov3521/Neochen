<Window x:Class="Points.Sounds"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Points"
        mc:Ignorable="d"
        Title="Sounds" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <MediaElement x:Name="media" Source="X:\program\Points\Points\Audio\sample-3s.mp3" Margin="0,0,0,371" LoadedBehavior ="Manual" />
        <Button x:Name="Play" Content="Play" HorizontalAlignment="Left" Margin="79,118,0,0" VerticalAlignment="Top" Width="75" Click="Play_Click"/>
        <Button x:Name="Stop" Content="Stop" HorizontalAlignment="Left" Margin="206,118,0,0" VerticalAlignment="Top" Width="75" Click="Stop_Click"/>
    </Grid>
</Window>
